@model IEnumerable<SharpTrooper.Entities.People>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>List Of Heroes</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hair_color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.skin_color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birth_year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.homeworld)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eye_color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mass)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.gender)
        </td>
   
        <td>
            @Html.DisplayFor(modelItem => item.height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hair_color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.skin_color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.birth_year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.homeworld)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eye_color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mass)
        </td>
    </tr>
}

</table>
